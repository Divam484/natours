extends base

block content
    main.main
        .login-form
            img(src="/img/logo-green-small.png", alt="Natours logo",width="60",height="38",align="left")
            img(src="/img/logo-green-small.png", alt="Natours logo",width="60",height="38",align="right")
            | 
            h1.heading-secondary--signup.ma-bt-lg &emsp;&ensp;&nbsp; Sign-up 
            form.form.form--signUp
                .form__group
                    label.form__label(for='name') Enter Name
                    input#name.form__input(type='text', placeholder='Name Surname')  
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com')
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', minlength='8')    
                .form__group.ma-bt-md
                    label.form__label(for='passwordConfirm') Password Confirm
                    input#passwordConfirm.form__input(type='password', placeholder='••••••••', minlength='8')
                .form__group
                    button.btn.btn--green Sign Up